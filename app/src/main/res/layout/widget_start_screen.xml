<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/pic_start_screen"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/materialGray"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Welcome to CarPc\ndashboard and configurator" />

    <Button
        android:id="@+id/btnDashboard"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:background="@drawable/transparent_bg_bordered_button"
        android:text="@string/btnDashboardScreen"
        android:textColor="@color/materialGray"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:background="@drawable/transparent_bg_bordered_button"
        android:text="@string/btnSettingsScreen"
        android:textColor="@color/materialGray"
/>

    <Button
        android:id="@+id/btnCharge"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:onClick="onClick"
        android:background="@drawable/transparent_bg_bordered_button"
        android:text="@string/btnChargeScreen"
        android:textColor="@color/materialGray" />

</LinearLayout>