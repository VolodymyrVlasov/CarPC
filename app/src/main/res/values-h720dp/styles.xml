<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParentLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ico_backgroud</item>
        <!--        <item name="android:background">@android:color/holo_blue_dark</item>-->

    </style>

    <style name="MyCheckBoxDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/materialGreen</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@android:color/darker_gray</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">21sp</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
        <!--        <item name="android:backgroundStacked">@android:color/black</item>-->
    </style>




    <!-- Values style dark -->
    <style name="value_dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="value_name_dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/holo_green_light</item> <!-- darker_gray -->
        <item name="android:textSize">15sp</item>
    </style>

</resources>


