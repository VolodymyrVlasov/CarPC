<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParentLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ico_backgroud</item>
        <!--        <item name="android:background">@android:color/holo_blue_dark</item>-->

    </style>

    <style name="MyCheckBoxDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/materialGreen</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@android:color/darker_gray</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">21sp</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
        <!--        <item name="android:backgroundStacked">@android:color/black</item>-->
    </style>


    <!-- Root container-->
    <style name="root_container" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- Root container with big margin-->
    <style name="root_big_margin_container" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>


    <!-- Divider LEFT -->
    <style name="divider_left" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="srcCompat">@drawable/pic_divider_line_to_left</item>
    </style>

    <!-- Divider RIGHT -->
    <style name="divider_right" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingStart">10dp</item>
        <item name="srcCompat">@drawable/pic_divider_line_to_right</item>
    </style>

    <!-- Divider CENTER -->
    <style name="divider_center" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/pic_divider_line_center</item>
    </style>

    <!--X_Big values style -->
    <style name="x_big_value" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textSize">110sp</item>
    </style>

    <!--Big values style -->
    <style name="big_value" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textSize">35sp</item>
    </style>

    <!-- Middle values style -->
    <style name="middle_value" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item> <!-- darker_gray -->
        <item name="android:textSize">18sp</item>
        <item name="android:text">0</item>
    </style>

    <!-- Small values style -->
    <style name="small_value" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item> <!-- darker_gray -->
        <item name="android:textSize">15sp</item>
        <item name="android:text">0</item>
    </style>

    <!-- Title labels style -->
    <style name="title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item> <!-- darker_gray -->
        <item name="android:textSize">15sp</item>
        <item name="android:text">0</item>
    </style>

    <!-- Description labels style -->
    <style name="description" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item> <!-- darker_gray -->
        <item name="android:textSize">10sp</item>
        <item name="android:text">0</item>
    </style>

</resources>


